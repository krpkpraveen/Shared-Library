pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building'
				script {
					if (12 > 3) {
						echo 'If condition executed!'
					}
				}
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}